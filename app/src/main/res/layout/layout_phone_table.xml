<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/phone_table_image_center"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_centerInParent="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/toolbar_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:scaleType="fitXY"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginTop="8dp">
                <TextView
                    android:id="@+id/name_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="nameB"
                    android:background="@color/LightGrey"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginBottom="2dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>
                <ImageView
                    android:id="@+id/logo_b"
                    android:layout_width="64dp"
                    android:layout_height="0dp"
                    android:src="@drawable/user3"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                android:id="@+id/msg_b"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="start"
                android:text="B20"
                android:layout_weight="1"
                android:textColor="@color/White"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">
            <ImageView
                android:id="@+id/cover_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@mipmap/gr"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/cover_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Open !" />
        </LinearLayout>
        <com.ai2app.teampoker.view.CardsShowLayout
            android:id="@+id/cards_show"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:cardArrangeTyp="hand_table"
            android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/phone_table_image_center"
        android:layout_marginStart="-24dp">
        <TextView
            android:id="@+id/msg_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:gravity="center"
            android:text="A20"
            android:textColor="@color/White"/>
        <TextView
            android:id="@+id/name_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_horizontal|top"
            android:text="nameA"
            android:background="@color/LightGrey"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="16dp"/>
        <ImageView
            android:id="@+id/logo_a"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/user1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_margin="4dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/phone_table_image_center"
        android:layout_marginEnd="-24dp">
        <TextView
            android:id="@+id/msg_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:gravity="center"
            android:textColor="@color/White"
            android:text="c20" />
        <TextView
            android:id="@+id/name_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_horizontal|top"
            android:text="nameC"
            android:background="@color/LightGrey"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="16dp"/>
        <ImageView
            android:id="@+id/logo_c"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/user5"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_margin="4dp"/>
    </LinearLayout>
</RelativeLayout>